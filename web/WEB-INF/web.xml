<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>general.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>quest.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductController</servlet-name>
        <servlet-class>general.controllers.SearchProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>quest.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddingProductController</servlet-name>
        <servlet-class>user.controllers.AddingProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowingCartController</servlet-name>
        <servlet-class>user.controllers.ShowingCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatingQuantityController</servlet-name>
        <servlet-class>user.controllers.UpdatingQuantityController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteFromCartController</servlet-name>
        <servlet-class>user.controllers.DeleteFromCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>user.controllers.PaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProductController</servlet-name>
        <url-pattern>/SearchProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/RegistrationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddingProductController</servlet-name>
        <url-pattern>/AddingProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowingCartController</servlet-name>
        <url-pattern>/ShowingCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatingQuantityController</servlet-name>
        <url-pattern>/UpdatingQuantityController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteFromCartController</servlet-name>
        <url-pattern>/DeleteFromCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/PaymentController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>SearchProductController</welcome-file>
    </welcome-file-list>
</web-app>
